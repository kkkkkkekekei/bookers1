<h1>Books</h1>
<table>
<theat>
 <tr>
  <th>Title</th>
  <th>Body</th>
  <th colspan="3"></th>
 </tr>
</theat>

<tbody>
  <% @lists.each do |list| %>
   <tr>
    <td><%= list.title %></td>
    <td><%= list.body %></td>
    <td><%= link_to "Show", book_path(list.id) %></td>
    <td><%= link_to "Edit", edit_book_path(list.id) %></td>
    <td><%= link_to "Destroy", book_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %></td>>

   </tr>
  <% end %>
 </tbody>
</table>
<h2>New book<h2>

 <% if @list.errors.any? %>
  <%= @list.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @list,url: books_path, method: :post, local: true do |f| %>
 <div>
  <%= f.label :title %>
  <%= f.text_field :title %>
	</div>
	<div>
  <%= f.label :body %>
  <%= f.text_area :body %>
	<div>
  <%= f.submit 'Create Book' %>
<% end %>
